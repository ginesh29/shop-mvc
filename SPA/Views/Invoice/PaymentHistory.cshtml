
@{ 
    List<SPA.Models.PartialPaymentList> PartialPaymentList = new List<SPA.Models.PartialPaymentList>();
    PartialPaymentList = Model;
    Layout = null;
    List<SPA.Models.LanguageLabelDetails> Language = new List<SPA.Models.LanguageLabelDetails>();
    Language = ViewBag.LanguageInfo;
    int index = 1;
}
<div class="add-vacation-table table-responsive choose-your-product">
    <table class="table table-striped margin-top15">
        <thead>
            <tr>
                @*Id*@
                <th class="text-left"> @Language.Where(c=>c.Order_id==5).Select(c=>c.Value).FirstOrDefault()</th>
                @*Amount*@
                <th class="text-center"> @Language.Where(c => c.Order_id == 34).Select(c => c.Value).FirstOrDefault()</th>
                @*Discount*@
                <th class="text-center display-none"> @Language.Where(c => c.Order_id ==33).Select(c => c.Value).FirstOrDefault()</th>
                @*Pay Date*@
                <th class="text-center"> @Language.Where(c => c.Order_id == 35).Select(c => c.Value).FirstOrDefault()</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tblPartialPayment">
            @foreach (var Item in PartialPaymentList.Where(c=>c.Invoice_Payment_id != null).ToList())
            {
                <tr id="@Item.Invoice_Payment_id">
                    <td class="spa-label1 text-left">@index</td>
                    <td class="spa-label1 text-center">@String.Format("{0:0.00}",Item.Pay_Amount)</td>
                    <td class="spa-label1 text-center display-none">@String.Format("{0:0.00}", Item.Discount_Amount)</td>
                    <td class="spa-label1 text-center">@Item.Pay_Date.Value.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <a><i class="fa fa-trash spa-icon1"></i></a>
                    </td>
                </tr>
                index = index + 1;
            }
        </tbody>
    </table>
</div>

