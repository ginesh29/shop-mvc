@model  SPA.Language_NewShop
@{
    ViewBag.Title = "ClickgoLanguage";
}

@using (Html.BeginForm("ClickgoLanguage", "Translation", FormMethod.Post, new { @id = "LanguageForm", @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.Label("Page Name", htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.Editor("PageName", new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(model => model.Page_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("English Value", htmlAttributes: new { @class = "control-label col-md-2 " })
            <div class="col-md-10">
                @Html.Editor("EnglishValue", new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("German Value", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("GermanValue", new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("French Value", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("FrenchValue", new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Sub Page", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("SubText", new { htmlAttributes = new { @class = "form-control required" } })
                @Html.ValidationMessageFor(model => model.col1, "", new { @class = "text-danger" })
            </div>
        </div>       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
                <input type="button" value="cancel" class="btn btn-default" id="LangCancel" />
            </div>
        </div>
    </div>
}
<script>
    $("#LanguageForm").validate();
    $("#LangCancel").click(function ()
    {
        $("#LanguageForm")[0].reset();
        $("#LanguageForm").validate().resetForm();
    });

</script>
